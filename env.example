DATABASE_URL=
AUTH_SECRET=
ASSET_PUBLIC_BASE_URL=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=
R2_ENDPOINT=
SUSPEND_DURATION_DAYS=7
FAMILY_CHAT_ENABLED=true

# ========================================
# SMS Configuration (SMS.ir)
# ========================================

# SMS Driver (must be 'smsir' for SMS.ir)
SMS_DRIVER=smsir

# SMS.ir API Key (Get from: https://www.sms.ir/panel)
# REQUIRED: Replace with your actual SMS.ir API key
SMS_API_KEY=YOUR_SMS_IR_API_KEY_HERE

# SMS.ir Template Name/ID (The template you created in SMS.ir panel)
# REQUIRED: Replace with your actual template name/ID
# Template must have a parameter named 'code' for OTP
SMS_TEMPLATE_NAME=YOUR_TEMPLATE_NAME_HERE

# Testing & Development Modes
# Set to 'true' for local development (no real SMS sent, code printed in console)
# Set to 'false' for production (real SMS sent via SMS.ir)
SMS_MOCK_MODE=false
TEST_ECHO_OTP=false

# Optional: Admin notification phone number
SIGNUP_ALERT_MSISDN=09923182082



